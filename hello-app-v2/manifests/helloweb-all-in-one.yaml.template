apiVersion: v1
kind: Service
metadata:
  name: hello-v2web
  labels:
    app: hello-v2
spec:
  selector:
    app: hello-v2
  ports:
  - port: 80
    targetPort: 8080
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-v2web
  labels:
    app: hello-v2
spec:
  replicas: 1
  selector:
    matchLabels: 
      app: hello-v2
  template:
    metadata:
      labels:
        app: hello-v2
    spec:
      containers:
      - name: hello-v2-app
        image: DOCKER_IMAGE_NAME
        ports:
        - containerPort: 8080